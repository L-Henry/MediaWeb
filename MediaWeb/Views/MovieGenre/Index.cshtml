@model IEnumerable<MediaWeb.Models.MovieModels.MovieGenreModels.MovieGenreListViewModel>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<hr />
<table>
    <tr>
        <td style="width:3rem">
            <strong>Id</strong>
        </td>
        <td style="width:10rem">
            <strong>Title</strong>
        </td>
        <td style="width:10rem">
            <strong>Rating</strong>
        </td>
        <td style="width:10rem">
            <strong>Aantal gezien</strong>
        </td>
        <td style="width:10rem">
            <strong>Heeft gezien</strong>
        </td>
        <td style="width:5rem" />
        <td style="width:5rem" />
    </tr>
    <tr>
    @if (Model.Count() == 0)
    {
        <tr>Er zijn nog geen genres.</tr>
    }
    else
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@Model.ElementAt(i).Id )</td>
                <td>@Model.ElementAt(i).Naam</td>
              

                <td><a asp-controller="MovieGenre" asp-action="Detail" asp-route-id="@Model.ElementAt(i).Id">Details</a></td>

                    <td><a asp-controller="MovieGenre" asp-action="Update" asp-route-id="@Model.ElementAt(i).Id">Edit</a></td>
                    <td><a asp-controller="MovieGenre" asp-action="Delete" asp-route-id="@Model.ElementAt(i).Id">Delete</a></td>
           </tr>
        }
    }


</table>

@if (SignInManager.IsSignedIn(User))
{
    <p><a asp-controller="MovieGenre" asp-action="Create">Create</a></p>
}



