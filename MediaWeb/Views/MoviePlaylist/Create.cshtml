@model MediaWeb.Models.MovieModels.MoviePlaylistModels.MoviePlaylistCreateViewModel



<form enctype="multipart/form-data" asp-controller="MoviePlaylist" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Naam"></label>
        <input class="form-control" asp-for="Naam" />
        <span class="text-danger" asp-validation-for="Naam"></span>
    </div>


    <div class="form-group">
        <label asp-for="ZichtbaarList"></label>
        @for (int i = 0; i < Model.ZichtbaarList.Count; i++)
        {
            <input type="checkbox" class="form-control" asp-for="ZichtbaarList[i].Checked" />@Model.ZichtbaarList[i].Naam
            <input type="hidden" asp-for="@Model.ZichtbaarList[i].Naam" />
        }
        <span class="text-danger" asp-validation-for="ZichtbaarList"></span>
    </div>


    <button class="btn btn-primary" type="submit">Create playlist</button>

</form>
